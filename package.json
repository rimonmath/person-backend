{
  "name": "person-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "format": "prettier --write src/",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.node.json",
    "minify": "find dist/plain-js -type f -name '*.js' -print0 | xargs -0 esbuild --outdir=dist/minified-js --outbase=dist/plain-js --minify --format=esm --platform=node",
    "preview": "node dist/plain-js/index.js"
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "sharp": "^0.34.4",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.18.10",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "kill-port": "^2.0.1",
    "prettier": "3.6.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
